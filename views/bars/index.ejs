<%- include ../partials/header %>

<div class="card">
<% if (bars.length) { %>
    <div class="container center">
        <% bars.forEach(function(bar) { %>
            <a href="/bars/<%= bar.id %>">
                <h3><%= bar.name %></h3>
            </a>
        <% }) %>
    </div>
<% } else { %>
    <h3>No Bars Currently</h3>
<% } %>
</div>

<div class="big center">
    <a class="btn" href="/bars/new">Add Bar</a>
</div>

<%- include ../partials/footer %>